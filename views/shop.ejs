<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Card</title>
    <link rel="stylesheet" href="/stylesheets/shop.css" />
    <!-- <script src="/javascripts/backpack.js"></script> -->
</head>

<body>
    <a href="/cart"><button class="show-cart-btn">Cart</button></a>
    <a href="/wallet" class="wallet-btn">
        Wallet: ₹<%= user.wallet %>
    </a>
    <nav class="navbar">
        <a href="/">Home</a>
        <a href="/admin">Sell</a>
        <a href="/shop">Shop</a>
        <a href="/cart">Cart</a>
        <a href="/wallet">Wallet</a>
        <a href="/admin-products">Statistics</a>
        <a href="/profile">Profile</a>
    </nav>
    <div class="container">
        <% products.forEach(function(product) { %>
            <div class="card">
                <img src="/images/product/<%= product.pPhoto %>" alt="<%= product.pName %>" />
                <div class="card-body">
                    <h4 class="card-title">
                        <%= product.pName %>
                    </h4>
                    <i class="icon">&#9733;</i>
                </div>
                <div class="desc">
                    <p>
                        <%= product.pDescription %>
                    </p>
                </div>
                <div class="card-footer">
                    <p class="price">₹ <%= product.pPrice %>
                    </p>
                    <br />
                    <a href="/addtocart/<%= product._id %>" class="btn add-to-cart">ADD TO CART</a>
                </div>
                <form action="/bargain/<%= product._id %>" method="POST" class="bargain-form">
                    <div class="bargain-input-group">
                      <input
                        type="number"
                        name="proposedPrice"
                        placeholder="₹ Enter your offer"
                        required
                        min="1"
                        class="bargain-input"
                      />
                      <button type="submit" class="bargain-btn">Propose Price</button>
                    </div>
                  </form>
                  
            </div>

            <!-- Inside your product loop -->

            <% }); %>
    </div>
    <a href="/admin"><button class="btn1">Make your Items listed</button></a>

    <div id="cart">
        <h3>Shopping Cart</h3>
        <ul id="cart-items"></ul>
        <div id="total-amount">Total: $0</div>
    </div>
</body>

</html>